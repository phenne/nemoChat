.MessangingPage
  display flex
  flex-flow column wrap
  justify-content center
  align-content center
  width 100%
  height 100%
  margin 0
  padding 0

.MessangingWrapper
  display flex
  margin auto
  padding 0
  border 1px solid grey
  width 900px
  height 90%
  overflow hidden
  border-radius 3px
  box-sizing border-box


  .DialogTabWrapper
    width 200px
    height 100%
    .DialogSearchWrapper
      width 100%
      height 40px
      border none
      margin 0
      input
        width 100%
        height 100%
        padding 0 15px
        border none
    .NewDialogButton
      width 100%
      height 70px
      margin 0
      border none
      cursor pointer
      background #4286f4
      color white
      &:hover
        background #1050b7
    .DialogTab
      width 100%
      height 70px
      margin 0
      border-bottom 1px solid grey

  .DialogWrapper
    width 700px
    height 100%
    border-left 1px solid grey

    .DialogBox
      display flex
      flex-flow nowrap column
      margin 0
      width 100%
      height calc(100% - 150px)
      border-bottom 1px solid grey
      .NoDialogsNotification
        margin auto
      .DialogBoxHeader
        display flex
        height 40px
        border-bottom 1px solid grey
        input
          border none
          width 100%
          margin auto 15px
      .ReplicasWrapper
        overflow-y scroll
        height calc(100% - 40px)
        .DialogReplica
          display block
          width 100%
          padding 15px
          box-sizing border-box
          margin-bottom 5px
          cursor pointer
          &:hover
            background honeydew
          &.interlocutor
            .DialogReplicaIdentifier
              color blue
          &.choosed
            background honeydew
        .DialogReplicaIdentifier
          display block
          font-weight bold
          font-size 12px
        .DialogReplicaContent
          display block



    .MessageBox
      display flex
      height 150px
      box-sizing border-box
      .MessageEditor
        margin auto
        padding 15px
        height calc(100% - 40px)
        width calc(100% - 130px)
        border-radius 5px
        resize none
        box-sizing border-box
        overflow-y scroll
        border 1px solid grey
      .SendMessageButton
        margin auto
        height calc(100% - 40px)
        width 80px
        padding 7px
        border none
        border-radius 3px
        cursor pointer
        background #4286f4
        color white
        &:hover
          background #1050b7